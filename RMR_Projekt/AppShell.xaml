<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RMR_Projekt.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:RMR_Projekt.Views"
    xmlns:local="clr-namespace:RMR_Projekt" 
    TabBarBackgroundColor ="#A8FF93"
    TabBarUnselectedColor ="Black"
    TabBarTitleColor="White"
    Shell.NavBarIsVisible="False">
    
    <TabBar >
        <Tab Title="Home"
            Icon="Home.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
        <Tab Title="Camera"
            Icon="Camera.png">
            <ShellContent ContentTemplate="{DataTemplate views:CameraPage}" />
        </Tab>
        <Tab Title="Profile"
            Icon="Profile.png">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>
