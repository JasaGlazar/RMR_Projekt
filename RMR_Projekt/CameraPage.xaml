<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RMR_Projekt.Views.CameraPage"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             >
    <Grid>

        <ScrollView>

            
            
            <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

                <Label x:Name="barcodeResult" FontSize="20"></Label>

                <cv:CameraView x:Name="cameraView" WidthRequest="300" HeightRequest="200" CamerasLoaded="cameraView_CamerasLoaded" BarCodeDetectionEnabled="True" BarcodeDetected="cameraView_BarcodeDetected">

                </cv:CameraView>

                <Button Text="JasasPP" Clicked="Button_Clicked" ></Button>

                <Image x:Name="myImage" WidthRequest="200" HeightRequest="200" ></Image>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>