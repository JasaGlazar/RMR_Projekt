<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RMR_Projekt.Views.CameraPage"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             BackgroundColor="{DynamicResource background}"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <cv:CameraView x:Name="cameraView" WidthRequest="300" HeightRequest="200" CamerasLoaded="cameraView_CamerasLoaded" BarCodeDetectionEnabled="True" BarcodeDetected="cameraView_BarcodeDetected">
        </cv:CameraView>

        <ScrollView Grid.Row="1" Margin="0,30,0,0" HorizontalOptions="CenterAndExpand">
            <VerticalStackLayout>
                <Image x:Name="product_image" Aspect="Fill" WidthRequest="150" HeightRequest="150"/>
                <Label x:Name="product_name" TextColor="{DynamicResource label_color}"></Label>
                <Label TextColor="{DynamicResource label_color}">Alergeni:</Label>
                <StackLayout x:Name="alergeni_list"></StackLayout>
            </VerticalStackLayout>
        </ScrollView>


                



    </Grid>
</ContentPage>